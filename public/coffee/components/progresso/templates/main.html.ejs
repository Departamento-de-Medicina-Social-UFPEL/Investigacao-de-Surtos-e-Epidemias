
<div class="container no-pad">
	<div class="row">
		<div class="col-sm-12"><h2><i class="glyphicon glyphicon-dashboard"></i>Progresso</h2></div>
	</div>
	<div class="row" id="badges">
		<div class="col-xs-12 col-sm-12 col-md-12">
			<div class="panel panel-default">
				<div class='panel-heading'><h3>Distintivos</h3></div>
				<div class='panel-body'>
					<div class="row">
						<div class="col-xs-8 col-xs-offset-4 col-sm-2 col-sm-offset-2 col-md-2 col-md-offset-3 col-lg-2 col-lg-offset-3 badge-container">
							<i class="mdi mdi-shield-outline badge-inicial"></i>
							<div class="num-badges"><%= (App.progresso.badgesConcedidos.length)? App.progresso.badgesConcedidos.length : '!'  %></div>
						</div>
						<div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-0 col-md-6 col-md-offset-0 col-lg-7 col-lg-offset-0 badge-link">
							<%  if(App.progresso.badgesConcedidos.length > 0){ %>
								<a href="#comp/badge/lista" class="link-lista-badge-inicial">Veja os distintivos que <b>você</b> conquistou</a>
							<%  }else{ %>
								<span class="link-lista-badge-inicial"><b>Você</b> ainda não conquistou nenhum distintivo, realize algumas atividades!</span>
							<%  } %>
						</div>
					</div>
				</div>
				<div class="panel-footer">
					<div class="progresso-sincroniza" style="padding: 10px; display: block;">
					 	<button class="btn btn-success btn-sinc" style="padding-left: 5px;">
					 		<i class="mdi mdi-autorenew"></i> Sincronizar progresso
					 	</button>
						<div class="progress" style="display:none">
							<div id="progressbar-sinc" class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
							  <span class="sr-only">40% Complete (success)</span>
							</div>
						</div>
						<div class="text-sinc-progresso"></div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-sm-12 col-sm-12" id="unidades">
		</div>
		<div class="col-sm-12 col-sm-6" id="enfermagem">
			
		</div>
		<div class="col-sm-12 col-sm-6" id="medicina">
		</div>
		<div class="col-sm-12 col-sm-12" id="odontologia">
		</div>
		<div class="col-sm-12 col-sm-12" id="interdisciplinar">
		</div>
	</div>
</div>