<style>
    .adaptItem{
        -webkit-column-break-inside: avoid;
        page-break-inside: avoid;
        break-inside: avoid;
        list-style-type: none;
        margin-top: 20px;
    }
    .biblioGeral ol li {
        font-size: 1.2em;
        margin-top: 1.3rem;
    }
    @media (min-width: 992px) {
        .adaptCol{
        column-count: 2;
        column-gap: 90px;
        column-fill: balance;
        }
    }
    .saiba-mais-main .titulo{
        padding: 12px;
        background-color:#aaa;
    }
    .saiba-mais-main .main-slide{
      padding: 30px;
        background-color: #eddfce;
        margin-bottom: 30px;
    }
    .saiba-mais-main .bibliografia{
      padding: 30px;
      background-color:#f2f2f2;
    }
    .saiba-mais-main .listaPess {
        margin-top: 10px;
    }
    .caso{
      margin-top: 30px;
    }
   .slide-saiba-mais p {
    font-size: 18px;
}
</style>
<article class="caso">
  <section id="introducao"></section>
  <section id="estadoResposta" style="padding: 15px;" >
    <div class="container-fluid">
      <h1>Você sabia que...</h1>
      <nav aria-label="Page navigation">
        <ul class="pagination pagination-lg">
          <li>
            <a  aria-label="Previous" class='prev'>
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% var indice = 0; slides.forEach(function(s){
            var classAux = indice == 0 ? "active":"";
          %>
          <li class="p<%= indice %> <%= classAux %>"><a class='link-item' data-indice='<%= indice %>' ><%= indice+1 %></a></li>
          <%
          indice++
          }) %>
          <li>
            <a  aria-label="Next" class='next'>
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    <div class="container-fluid">
  </section>
  <section id="pacienteTopo"></section>
  <section id="slidesLista"></section>
     <div class="text-center">
        <button class="btn btn-lg btn-info prev">Voltar</button>
        <button class="btn btn-lg btn-info next">Avançar</button>
    </div>
</article>
