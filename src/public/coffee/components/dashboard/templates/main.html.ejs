    .vcenter { display: flex; align-items: center }
    .title { font-size: 28px; color: #646464 }
    .sub-title { font-size: 22px; color: #646464 }

    label { font-size: 16px; color: #646464 !important; text-transform: none !important }
    .oferta { line-height: 30px; margin: 3px 0px 0px 0px; padding-right: 0; padding-left: 0.5em }

    input[type=date] { height: 38px !important }

    .header-grafico { background-color: #ecf0ff !important; color: #0f464d !important }

