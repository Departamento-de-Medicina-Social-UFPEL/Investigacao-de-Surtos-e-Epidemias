<div class="container no-pad">
    <div class="row" style="margin-top: 75px">
        <div class="col-xs-12 container-titulo">
            <div class="title text-center" style="">
                Perfil dos estudantes do Curso de Investigação de Surtos e Epidemias
            </div>
            <div class="sub-title text-center" style="">
                Departamento de Medicina Social - Universidade Federal de Pelotas
            </div>
        </div>

        <div class="row hcenter col-xs-12" style="margin-top: 100px">
            <div class="col-xs-6 form-group gray-border" style="margin-bottom: 30px; padding: 0">
                <label class="col-xs-4 control-label oferta" for="oferta">Oferta</label>
                <div class="col-xs-8 div-select-oferta">
                    <select class="form-control" name="oferta" id="oferta">
                        <option value="">Todas as ofertas</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-6 form-group pl-0">
                <div class="col-xs-5 pr-0 vcenter"><label>Periodo de inscrição:</label></label></div>
                <div class="col-xs-7 px-0 vcenter">
                    <div class="col-xs-2 px-0 hcenter"><label for="inicio_inscricao">de</label></div>
                    <div class="col-xs-4 px-0 gray-border" style="height: 38px !important"><input type='date' class="form-control" name="inicio_inscricao" id="inicio_inscricao"></div>
                    <div class="col-xs-2 px-0 hcenter"><label for="fim_inscricao">a</label></div>
                    <div class="col-xs-4 px-0 gray-border" style="height: 38px !important"><input type='date' class="form-control" name="fim_inscricao" id="fim_inscricao"></div>
                </div>
            </div>
            <div class="col-xs-6 form-group">
                <div class="col-xs-12 px-0 btn-group btn-toggle" data-toggle="buttons">
                    <label class="col-xs-6 btn btn-primary active"><input type="radio" name="filtro_inscritos" value="todos" checked style="display: none">Todos Inscritos</label>
                    <label class="col-xs-6 btn"><input type="radio" name="filtro_inscritos" value="certificados" style="display: none">Somente certificados</label>
                </div>
            </div>
            <div class="col-xs-6 form-group pl-0">
                <div class="col-xs-5 pr-0 vcenter"><label>Periodo de certificação:</label></div>
                <div class="col-xs-7 px-0 vcenter">
                    <div class="col-xs-2 px-0 hcenter"><label for="inicio_certificacao">de</label></div>
                    <div class="col-xs-4 px-0 gray-border" style="height: 38px !important"><input type='date' class="form-control" name="inicio_certificacao" id="inicio_certificacao"></div>
                    <div class="col-xs-2 px-0 hcenter"><label for="fim_certificacao">a</label></div>
                    <div class="col-xs-4 px-0 gray-border" style="height: 38px !important"><input type='date' class="form-control" name="fim_certificacao" id="fim_certificacao"></div>
                </div>
            </div>
            <div class="col-xs-6 form-group">
                <div class="col-xs-12 px-0 btn-group btn-toggle" data-toggle="buttons">
                    <label class="col-xs-4 btn btn-primary active"><input type="radio" name="filtro_profissao" value="todos" checked style="display: none">Todos</label>
                    <label class="col-xs-4 btn"><input type="radio" name="filtro_profissao" value="estudante" style="display: none">Somente estudante</label>
                    <label class="col-xs-4 btn"><input type="radio" name="filtro_profissao" value="trabalhador" style="display: none">Somente trabalhador</label>
                </div>
            </div>
        </div>
